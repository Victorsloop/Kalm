
<div class="form-container">
  <h1> Sign Up </h1>
  <% if flash[:user_errors] %>
    <% flash[:user_errors].each do |error| %>
      <p style="color:red;"><%= error %></p>
    <% end %>
  <% end  %>

  <%= form_for(@user) do |f|%>
    <div class="form-input">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <br>
    <div class="form-input">
      <%= f.label :age %>
      <%= f.number_field :age %>
    </div>
    <br>
    <div class="form-input">
      <%= f.label :username %>
      <%= f.text_field :user_name %>
    </div>
    <br>
    <div class="form-input">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <br>
    <%= f.submit "SignUp", class: "form-btn" %>
  <% end %>
</div>




