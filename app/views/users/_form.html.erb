
<% if flash[:user_errors] %>
  <% flash[:user_errors].each do |error| %>
    <p style="color:red;"><%= error %></p>
  <% end %>
<% end  %>

<%= form_for @user do |f|%>
<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :age %>
<%= f.number_field :age %>
<br>
<%= f.label :username %>
<%= f.text_field :user_name %>
<br>
<%= f.label :password %>
<%= f.password_field :password %>
<br>
<%= f.submit "SignUp" %>
<% end %>




